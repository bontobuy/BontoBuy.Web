@using BontoBuy.Web.Models
@model LoginViewModel
@{
    ViewBag.Title = "Log in";
}

<h2>@ViewBag.Title.</h2>
<div class="row">
    <div class="col-md-8">
        <p class="text-info">@ViewBag.StatusMessage</p>
        <section id="loginForm">
            @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()
                <h4>Use a local account to log in.</h4>
                <hr/>
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    @Html.LabelFor(m => m.Email, new { @class = "col-md-2 control-label" })
                    <div class="col-md-5">
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label" })
                    <div class="col-md-5">
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <div class="checkbox">
                            @Html.CheckBoxFor(m => m.RememberMe)
                            @Html.LabelFor(m => m.RememberMe)
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Log in" class="btn btn-success"/>
                    </div>
                </div>

                <p>
                    @Html.ActionLink("Forgot your password?", "ForgotPassword")
                </p>
            }
        </section>
    </div>
    <div class="col-md-4">
        <section>
            <h2>New Customer</h2>
            <hr/>
            <p>
                By creating an account on our website you will be able to shop faster, be up to date on an order status, and keep track of the orders you have previously made.
            </p>
            @Html.ActionLink("Register", "Register", "Account", new { area = "" }, new { @class = "btn btn-primary glyphicon glyphicon-plus" })
        </section>
    </div>
</div>
<div class="row">
    <div class="col-md-4 col-md-offset-8">
        <section>
            <h2>
                Want to sell your goods?
                @Html.ActionLink("Register as Supplier", "RegisterSupplier", "Account", new { area = "" }, new { @class = "btn btn-primary glyphicon glyphicon-plus" })
            </h2>
            <hr/>
            <p>
                By creating an account on our website you will be sell your goods, be up to date on an order status.
            </p>
        </section>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}