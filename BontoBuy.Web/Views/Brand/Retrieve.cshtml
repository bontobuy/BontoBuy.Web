@model IEnumerable<BontoBuy.Web.Models.BrandViewModel>

@{
    Layout = "~/Views/Shared/AdminLayout.cshtml";
    ViewBag.Title = "List of Brands";
}
<div class="col-md-9">
    <h2>@ViewBag.Title</h2>
    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Update", new { id = item.BrandId }) |
                    @Html.ActionLink("Details", "Get", new { id = item.BrandId }) |
                    @Html.ActionLink("Archive", "Archive", new { id = item.BrandId })
                </td>
            </tr>
        }
    </table>
</div>