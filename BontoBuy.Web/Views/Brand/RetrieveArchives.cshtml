@model IEnumerable<BontoBuy.Web.Models.BrandViewModel>

@{
    Layout = "~/Views/Shared/AdminLayout.cshtml";
    ViewBag.Title = "RetrieveArchives";
}

<h2>RetrieveArchives</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>

            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.BrandId }) |
                @Html.ActionLink("Details", "Details", new { id = item.BrandId }) |
                @Html.ActionLink("Revert Status to Active", "RevertArchive", new { id = item.BrandId })
            </td>
        </tr>
    }
</table>