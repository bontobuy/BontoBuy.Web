@model IEnumerable<BontoBuy.Web.Models.CartViewModel>
@{
    ViewBag.Title = "NavigateToCart";
}

<h2>NavigateToCart</h2>

<div class="col-md-12">
    <h2>@ViewBag.Title</h2>

    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ModelId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SupplierId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ModelName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ImageUrl)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UnitPrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SubTotal)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ModelId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SupplierId)
                </td>
                <th>
                    @Html.DisplayFor(modelItem => item.UserId)
                </th>
                <th>
                    @Html.DisplayFor(modelItem => item.ModelName)
                </th>
                <th>
                    <img src="~/images/@item.ImageUrl" width="200" height="200"/>
                </th>
                <th>
                    @Html.DisplayFor(modelItem => item.UnitPrice)
                </th>
                <th>
                    @Html.EditorFor(modelItem => item.Quantity, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => item.Quantity)
                </th>
                @*You need to add a JS code in order to make the price appear dynamically!!*@
                <th>
                    @Html.DisplayFor(modelItem => item.SubTotal)
                </th>
            </tr>
        }
    </table>
</div>