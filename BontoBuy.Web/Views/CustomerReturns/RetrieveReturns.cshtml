@using PagedList;
@using PagedList.Mvc;
@model IEnumerable<BontoBuy.Web.Models.ReturnViewModel>
@{
    Layout = "~/Views/Shared/CustomerDashboardLayout.cshtml";
}

<div class="col-md-12">
    <h2>@ViewBag.Title</h2>
    <h4 class="text-success">@ViewBag.CustomerReturnStatus</h4>
    <p class="text-success">@ViewBag.StatusMessage</p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.OrderId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ReturnDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DtCreated)
            </th>
            <th></th>
        </tr>

        @foreach (var item in ViewBag.pageOfProducts)
        {
            <tr>
                <td>
                    @item.OrderId
                </td>
                <td>
                    @item.ReturnDate
                </td>
                <td>
                    @item.Status
                </td>
                <td>
                    @item.DtCreated
                </td>
                <td>
                    @Html.ActionLink("Details", "GetReturns", new { id = item.ReturnId })
                </td>
            </tr>
        }
    </table>
    <div class="col-md-12">
        <div class="text-center">
            @Html.PagedListPager((IPagedList)ViewBag.pageOfProducts, page => Url.Action("RetrieveOrders", new { page }))
            Showing @ViewBag.pageOfProducts.FirstItemOnPage to @ViewBag.pageOfProducts.LastItemOnPage of @ViewBag.pageOfProducts.TotalItemCount Returns
        </div>
    </div>
</div>