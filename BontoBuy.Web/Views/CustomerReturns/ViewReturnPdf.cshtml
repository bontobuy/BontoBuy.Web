@model BontoBuy.Web.Models.ReturnViewModel
@{
    Layout = null;
    ViewBag.Title = "Return";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width"/>

    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/css/bootstrap")
    @Scripts.Render("~/bundles/modernizr")
    <style>
        body {
            background: transparent;
        }

        .invoice-title h2, .invoice-title h3 {
            display: inline-block;
        }

        .table > tbody > tr > .no-line {
            border-top: none;
        }

        .table > thead > tr > .no-line {
            border-bottom: none;
        }

        .table > tbody > tr > .thick-line {
            border-top: 2px solid;
        }

        #InvoiceTitle {
            margin-left: -222px;
        }

        #LogoInvoice {
            margin-top: -15px;
            margin-left: -17px;
        }

        .footerContainer {
            bottom: 0;
        }
    </style>
    <title>@ViewBag.Title</title>
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col-xs-12">
                <div class="invoice-title">
                    <img id="LogoInvoice" class="navbar-brand" height="79" width="236" src="~/Content/Logo2.png"/>
                    <br>
                    <h2 id="InvoiceTitle">Return</h2><h3 class="pull-right">Return #@Model.ReturnId</h3>
                </div>
                <hr>
                <div class="row">
                    <div class="col-xs-6">
                        <address>
                            <strong>Details: </strong><br>
                            Order #@Model.OrderId<br>
                            Date Created: @Model.DtCreated <br/>
                            Reason For Return: @Model.Reason
                            @*@Model.<br>
                                @Model.City<br>
                                @Model.PhoneNumber<br/>
                                @Model.Zipcode*@
                        </address>
                    </div>
                    @*<div class="col-xs-6 text-right">
                            <address>
                                <strong>Supplier:</strong><br>
                                @Model.SupplierName
                            </address>
                        </div>*@
                </div>
                <div class="row">
                    <div class="col-xs-9">
                        <address>

                            Dear Customer, <br/>
                            your Return Request made for Order #@Model.OrderId has been approved. <br/>
                            As such the Return Method will be:<strong>
                                @Model.ReturnMethod
                            </strong>

                            @*@Model.ConfirmationCode*@
                        </address>
                    </div>
                    <div class="col-xs-3 text-right">
                        <address>
                            <strong>Return Date:</strong><br>
                            @Model.ReturnDate<br><br>
                        </address>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <footer>
        <div class="footerContainer">
            Thank you for your request. <br/>
            For any query contact us on our website <a>BontoBuy.com</a><br/>
        </div>
    </footer>
</body>
</html>