        background-color: white;
        padding-right: 15px;
        padding-left: 15px;
        margin-right: auto;
        margin-left: auto;
    }

    .jumbotron {
        padding: 25px;
    }

    #cartSide .empty {
        font-style: italic;
        color: #a0a3ab;
        font-size: 14px;
        letter-spacing: 1px;
    }

    div.cart-icon-top {
        position: absolute;
        background: #fff url("https://s3-us-west-2.amazonaws.com/s.cdpn.io/245657/cart.png") 0 -3px no-repeat;
        margin: 0;
        width: 21px;
        height: 19px;
        z-index: 1;
        top: 23px;
        left: 170px;
    }

    #cardSideBar {
        position: fixed;
        right: 100px;
        border: 1px solid #ddd;
        z-index: 1030;
        background: url(../../Content/Admin/sidebar-5.jpg);
        border-radius: 20px;
        -webkit-box-shadow: 3px 3px 5px 6px #ccc; /* Safari 3-4, iOS 4.0.2 - 4.2, Android 2.3+ */
        -moz-box-shadow: 3px 3px 5px 4px #ccc; /* Firefox 3.5 - 3.6 */
        box-shadow: 3px 3px 5px 4px #ccc;
    }

    #SCart {
        margin-left: -1.5px;
    }

    ul.SCart li .item {
        display: block;
        padding: 3px 10px;
        margin: 3px 0;
    }

        ul.SCart li .item:hover {
            background-color: #f3f3f3;
        }

        ul.SCart li .item:after {
            visibility: hidden;
            display: block;
            font-size: 0;
            content: " ";
            clear: both;
            height: 0;
        }

    ul.SCart li .item-left {
        float: left;
    }

        ul.SCart li .item-left img,
        ul.SCart li .item-left span.item-info {
            float: left;
        }

        ul.SCart li .item-left span.item-info {
            margin-left: 10px;
        }

            ul.SCart li .item-left span.item-info span {
                display: block;
            }

    ul.SCart li .item-right {
        float: right;
    }

        ul.SCart li .item-right button {
