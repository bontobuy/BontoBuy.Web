@section scripts{

    <script type="text/javascript">
        var countItem = 0;
        $(document).ready(function () {

            $('.dropdown-toggle').mouseover(function () {
                var CategoryName = $(this).attr('data-name').toString();
                if (CategoryName == 'Mobiles & Tablets') {
                    $('.mega-sidebar-menu').css('background', 'url(../../Content/Menu/mobilephones-tablets.jpg)')
                }
                else if (CategoryName == 'Computers') {
                    $('.mega-sidebar-menu').css('background', 'url(../../Content/Menu/Computers.jpg)')
                }
                else $('.mega-sidebar-menu').css('background', 'Transparent');
            });

            if (countItem == 0) {
                $('#cardSideBar').css('display', 'none');
            }
            else {
                $('#cardSideBar').css('display', 'inline', function () {
                    $(this).fadeIn(1000);
                });
            }

            $('#cartAlert').hide();

            $('.AddToCart').click(function () {
                var modelId = $(this).attr('data-id');
                var modelImg = $(this).attr('data-img');

                var hasBeenAppended = false;
                $.ajax({
                    url: '/Home/AddCartItem/',
                    type: 'POST',
                    dataType: 'json',
                    data: { id: modelId },
                    success: function (data) {
                        $(data.Cart).each(function (index, item) {
                            //$('.dropdown-cart').append('<li class="cartlist"><span class="item"><span class="item-left"><span class="item-info"><span>' + item.ModelName + '</span><span> Rs' + item.UnitPrice + '</span></span></span><span class="item-right"><button class="btn btn-xs btn-danger pull-right">x</button></span></span></li><li class="divider"></li>');
                            $('#SCart').find('.appended').remove();
                            //if (data.carCount <= 6) {
                            $('#SCart').append('<li class="appended fa fa-plus"><span class="item"><span class="item-left"><span class="item-info"><span>' + item.ModelName + '</span><span> Rs' + item.UnitPrice + '</span></span></span><span class="item-right"><button class="btn btn-xs btn-danger pull-right">x</button></span></span></li><li class="divider"></li>');
                            //}

                            $('#cartAlert').fadeIn(400);
                            setTimeout(function () { $('#cartAlert').fadeOut(1000) }, 3000);
                        });
                        countItem = data.carCount;
                        $(".cart").text(data.carCount);
                        $('#viewCart').removeClass('hide');
                    }
                });
                $('#cardSideBar').slideDown(1000);

                //if (countItem == 6) {
                //    alert('Shopping Cart', 'Shopping Cart has reached maximum display number. <br> Click on View Cart');
                //}
            });

            $('#HideCart').click(function () {
                $('#cardSideBar').slideUp(1000);
            })
        });
    </script>

