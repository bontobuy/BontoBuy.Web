@model dynamic
@{
    ViewBag.Title = @Model.Info.ModelNumber + " Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style type="text/css">
    .gold {
        color: #FFBF00;
    }

    /*********************************************
                            PRODUCTS
        *********************************************/

    .product {
        border: 1px solid #dddddd;
        height: 321px;
    }

        .product > img {
            max-width: 230px;
        }

    .product-rating {
        font-size: 20px;
        margin-bottom: 25px;
    }

    .product-title {
        font-size: 20px;
    }

    .product-desc {
        font-size: 14px;
    }

    .product-price {
        font-size: 22px;
    }

    .product-stock {
        color: #74DF00;
        font-size: 20px;
        margin-top: 10px;
    }

    .product-info {
        margin-top: 50px;
    }

    /*********************************************
                            VIEW
        *********************************************/

    .content-wrapper {
        max-width: 1140px;
        background: #fff;
        margin: 0 auto;
        margin-top: 25px;
        margin-bottom: 10px;
        border: 0px;
        border-radius: 0px;
    }

    .container-fluid {
        max-width: 1140px;
        margin: 0 auto;
    }

    .view-wrapper {
        float: right;
        max-width: 70%;
        margin-top: 25px;
    }

    /*.container {
                padding-left: 0px;
                padding-right: 0px;
                max-width: 100%;
            }*/

    /*********************************************
                        ITEM
        *********************************************/

    .service1-items {
        padding: 0px 0 0px 0;
        float: left;
        position: relative;
        overflow: hidden;
        max-width: 100%;
        height: 321px;
        width: 130px;
    }

    .service1-item {
        height: 107px;
        width: 120px;
        display: block;
        float: left;
        position: relative;
        padding-right: 20px;
        border-right: 1px solid #DDD;
        border-top: 1px solid #DDD;
        border-bottom: 1px solid #DDD;
    }

        .service1-item > img {
            max-height: 110px;
            max-width: 110px;
            opacity: 0.6;
            transition: all .2s ease-in;
            -o-transition: all .2s ease-in;
            -moz-transition: all .2s ease-in;
            -webkit-transition: all .2s ease-in;
        }

            .service1-item > img:hover {
                cursor: pointer;
                opacity: 1;
            }

    .service-image-left {
        padding-right: 50px;
    }

    .service-image-right {
        padding-left: 50px;
    }

        .service-image-left > center > img, .service-image-right > center > img {
            height: 319px;
            width: 242px;
        }

    marquee > a, marquee > a:hover {
        color: #000;
        text-decoration: none;
    }

    .productbox {
        width: 250px;
        height: auto;
        background-color: #ffffff;
        padding: 10px;
        margin-bottom: 10px;
        padding: 10px;
        -webkit-border-radius: 3px;
        -moz-border-radius: 3px;
        border-radius: 3px;
        background-color: #fff;
        border: solid 1px #cbcbcb;
        transition: all .20s ease-in-out;
    }

        .productbox img {
            width: 235px;
            height: 214px;
        }

    .producttitle {
        font-weight: bold;
        padding: 5px 0 5px 0;
        width: 235px;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
    }

        .producttitle a {
            color: #000;
            text-decoration: none;
        }

        .producttitle .btn {
            background-color: #EDEEF0;
        }
</style>

<div class="container-fluid">
    <h2>@ViewBag.Title</h2>
    <div class="content-wrapper">
        <div class="item-container">
            <div class="container">
                <div class="col-md-12">
                    <div class="product col-md-3 service-image-left">
                        <center>
                            <a><img id="@Model.Info.ModelId" class="img-responsive" src="~/images/@Model.Info.ImageUrl" alt="@Model.Info.ModelNumber"></a>
                        </center>
                    </div>
                    @*<div class="container service1-items col-sm-2 col-md-2 pull-left">
                            <center>
                                <a id="item-1" class="service1-item">
                                    <img src="" alt="">
                                </a>
                                <a id="item-2" class="service1-item">
                                    <img src="" alt="">
                                </a>
                                <a id="item-3" class="service1-item">
                                    <img src="" alt="">
                                </a>
                            </center>
                        </div>*@
                </div>

                <div class="col-md-7 border">
                    <div class="product-title">@Model.Info.ModelNumber</div>
                    <div class="product-desc">Description</div>
                    <div class="product-rating"><i class="glyphicon glyphicon-star gold"></i> <i class="fa fa-star gold"></i> <i class="fa fa-star gold"></i> <i class="fa fa-star gold"></i> <i class="fa fa-star-o"></i> </div>
                    <hr>
                    <div class="product-price">Rs @Model.Info.Price</div>
                    <div class="product-stock">In Stock</div>
                    <hr>
                    <div class="btn-group cart">
                        <a href="" class="btn btn-success AddToCart" data-id="@Model.Info.ModelId">AddToCart</a>@*@Html.ActionLink("AddToCart", "NavigateToCart", "Cart", new { @class = "btn btn-success AddToCart" })*@
                    </div>
                    <div class="btn-group wishlist">
                        <button type="button" class="btn btn-danger">
                            Add to wishlist
                        </button>
                    </div>
                </div>
            </div>
        </div>
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-10 product-info border">
                    <ul id="myTab" class="nav nav-tabs nav_tabs">

                        <li class="active"><a href="#service-one" data-toggle="tab">DESCRIPTION</a></li>
                        <li><a href="#service-two" data-toggle="tab">REVIEWS</a></li>
                    </ul>
                    <div id="myTabContent" class="tab-content">
                        <div class="tab-pane fade in active" id="service-one">

                            <section class="container product-info">

                                <h3><b>@ViewBag.Overview</b></h3>
                                @foreach (var spec in Model.Overview)
                                {
                                    <li>@spec.SpecificationDescription - @spec.SpecificationValue</li>
                                }
                                <br/>
                                <h3><b>@ViewBag.BoxContent</b></h3>
                                @foreach (var spec in Model.BoxContent)
                                {
                                    <li>@spec.SpecificationDescription - @spec.SpecificationValue</li>
                                }
                                <br/>
                                <h3><b>@ViewBag.Display</b></h3>
                                @foreach (var spec in Model.Display)
                                {
                                    <li>@spec.SpecificationDescription - @spec.SpecificationValue</li>
                                }
                                <br/>
                                <h3><b>@ViewBag.Software</b></h3>
                                @foreach (var spec in Model.Software)
                                {
                                    <li>@spec.SpecificationDescription - @spec.SpecificationValue</li>
                                }
                                <br/>
                                <h3><b>@ViewBag.Camera</b></h3>
                                @foreach (var spec in Model.Camera)
                                {
                                    <li>@spec.SpecificationDescription - @spec.SpecificationValue</li>
                                }
                                <br/>
                                <h3><b>@ViewBag.Connectivity</b></h3>
                                @foreach (var spec in Model.Connectivity)
                                {
                                    <li>@spec.SpecificationDescription - @spec.SpecificationValue</li>
                                }
                                <br/>
                                <h3><b>@ViewBag.Processor</b></h3>
                                @foreach (var spec in Model.Processor)
                                {
                                    <li>@spec.SpecificationDescription - @spec.SpecificationValue</li>
                                }
                                <br/>
                                <h3><b>@ViewBag.MemoryStorage</b></h3>
                                @foreach (var spec in Model.MemoryStorage)
                                {
                                    <li>@spec.SpecificationDescription - @spec.SpecificationValue</li>
                                }
                                <br/>
                                <h3><b>@ViewBag.Hardware</b></h3>
                                @foreach (var spec in Model.Hardware)
                                {
                                    <li>@spec.SpecificationDescription - @spec.SpecificationValue</li>
                                }
                                <br/>
                                <h3><b>@ViewBag.HardwareConnectivity</b></h3>
                                @foreach (var spec in Model.HardwareConnectivity)
                                {
                                    <li>@spec.SpecificationDescription - @spec.SpecificationValue</li>
                                }
                                <br/>
                                <h3><b>@ViewBag.BatteryPower</b></h3>
                                @foreach (var spec in Model.BatteryPower)
                                {
                                    <li>@spec.SpecificationDescription - @spec.SpecificationValue</li>
                                }
                                <br/>
                                <h3><b>@ViewBag.Dimensions</b></h3>
                                @foreach (var spec in Model.Dimensions)
                                {
                                    <li>@spec.SpecificationDescription - @spec.SpecificationValue</li>
                                }
                                <br/>
                                <h3><b>@ViewBag.Warranty</b></h3>
                                @foreach (var spec in Model.Warranty)
                                {
                                    <li>@spec.SpecificationDescription - @spec.SpecificationValue</li>
                                }
                                <br/>
                            </section>
                        </div>
                        <div class="tab-pane fade" id="service-two">

                            <section class="container"></section>
                        </div>
                    </div>
                    <hr>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <h2 class="text-info"><strong>Related Products</strong></h2>
                <marquee style="" scrollamount="6" scrolldelay="90" direction="left" onmouseover="this.stop()" onmouseout="this.start()">
                    <ul class="list-inline list-unstyled r">
                        @foreach (var item in Model.RelatedProducts)
                        {
                            <li class="productbox">
                                <a href="@Url.Action("ModelDetails", "Home", new { id = item.ModelId })"><img src="~/images/@item.ImageUrl" class="img-responsive"></a>
                                <div class="producttitle">@item.ModelNumber</div>
                                <div class="text-primary">
                                    @item.Price <br/>
                                @item.BrandName <br/>
                                @item.DtCreated
                            </div>
                        </li>
                        }
                    </ul>
                    <br>
                </marquee>
            </div>
        </div>
    </div>
</div>

