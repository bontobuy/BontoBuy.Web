@model BontoBuy.Web.Models.UserRoleViewModel

@{
    ViewBag.Title = "EditUser";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div class="col-md-9">
    <div class="container">

        <h2>EditUser</h2>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <h4>Enter Details</h4>
                <hr/>
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.UserId)
                <div class="form-group">
                    @Html.DisplayNameFor(model => model.CurrentRoles)
                    <div class="col-md-5">
                        @foreach (var item in Model.CurrentRoles)
                        {
                            <ol>
                                <li>@Html.DisplayFor(model => model.CurrentRoles)</li>
                            </ol>
                        }
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Status, "StatusId", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-5">
                        @Html.DropDownList("StatusId", null, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Status, "", new { @class = "text-danger" })
                    </div>
                </div>
                @*<div class="form-group">
                        @Html.LabelFor(model => model.UserRoles, "UserRole", htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-5">
                            @Html.DropDownList("roleName", (IEnumerable<SelectListItem>)ViewBag.UserRoles)
                            @Html.ValidationMessageFor(model => model.UserRoles, "", new { @class = "text-danger" })
                        </div>
                    </div>*@

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Save" class="btn btn-default"/>
                    </div>
                </div>
            </div>
        }

        <div>
            @Html.ActionLink("Back to List", "Index")
        </div>
    </div>
</div>