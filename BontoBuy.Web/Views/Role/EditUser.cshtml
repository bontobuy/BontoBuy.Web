@model BontoBuy.Web.Models.UserRoleViewModel

@{
    ViewBag.Title = "EditUser";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<style type="text/css">
    #EditUser {
        margin-top: 50px;
    }
</style>
<div class="col-md-9">
    <div class="container">

        <h2 class="text-info">EditUser <span class="fa fa-user"></span></h2>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal" id="EditUser">
                <h4>Enter Details</h4>
                <hr/>
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.UserId)
                <div class="form-group">
                    @Html.LabelFor(model => model.CurrentRoles, "User Current Role", htmlAttributes: new { @class = "control-label col-md-3" })
                    @*@Html.DisplayNameFor(model => model.CurrentRoles)*@
                    <div class="col-md-5">
                        @foreach (var item in Model.CurrentRoles)
                        {

                            <p>@item</p>

                        }
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.Status, htmlAttributes: new { @class = "control-label col-md-3" })
                    <div class="col-md-5">
                        @Html.DisplayFor(model => model.Status, new { htmlAttributes = new { @class = "form-control" } })

                    </div>
                </div>

                @*<div class="form-group">
                        @Html.LabelFor(model => model.Status, "StatusId", htmlAttributes: new { @class = "control-label col-md-3" })
                        <div class="col-md-5">
                            @Html.DropDownList("StatusId", null, htmlAttributes: new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.Status, "", new { @class = "text-danger" })
                        </div>
                    </div>*@
                @*<div class="form-group">
                        @Html.LabelFor(model => model.UserRoles, "UserRole", htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-5">
                            @Html.DropDownList("roleName", (IEnumerable<SelectListItem>)ViewBag.UserRoles)
                            @Html.ValidationMessageFor(model => model.UserRoles, "", new { @class = "text-danger" })
                        </div>
                    </div>*@

                @if (Model.Status == "Active")
                {
                    <div class="form-group">
                        <div class="col-md-offset-3 col-md-10">
                            <input type="submit" value="Desactivate" class="btn btn-danger"/>
                        </div>
                    </div>
                }
                @if (Model.Status == "Inactive")
                {
                    <div class="form-group">
                        <div class="col-md-offset-3 col-md-10">
                            <input type="submit" value="Activate" class="btn btn-success"/>
                        </div>
                    </div>
                }
                @if (Model.Status == "Pending")
                {
                    <div class="form-group">
                        <div class="col-md-offset-3 col-md-10">
                            <input type="submit" value="Activate" class="btn btn-success"/>
                        </div>
                    </div>
                }
            </div>
        }

        <div>
            @Html.ActionLink("Back to List", "RetrieveUsers")
        </div>
    </div>
</div>