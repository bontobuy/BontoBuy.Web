@using Microsoft.AspNet.Identity
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width"/>
    <title>@ViewBag.Title</title>

    <style type="text/css">
        #demo {
            box-shadow: none;
            -webkit-box-shadow: none;
            left: 224px;
            top: -1px;
        }

        #sideNav > li > a {
            color: black;
            font-weight: 100;
            font-size: 15px;
        }

        .Dash {
            background-color: lightskyblue;
        }
    </style>

    @Styles.Render("~/Content/AdminCSS")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbardefault navbar-fixed-top">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a href="@Url.Action("Index","SalesClerk")"><img id="Logo" class="navbar-brand" height="79" width="236" src="~/Content/Logo2.png" /></a>
                @Html.ActionLink("Sales Clerk", "Index", "SalesClerk", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav navbar-right">
                    @Html.Partial("AdminLoginPartial")
                </ul>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav side-nav" id="sideNav">
                    <li class="Dash">
                        <a href="@Url.Action("Index", "SalesClerk")"><i class="glyphicon glyphicon-dashboard"></i> Dashboard</a>
                    </li>
                    <li>
                    <li class="dropdown">
                        <a href="#" data-toggle="dropdown"><i class="dropdown-toggle glyphicon glyphicon-book"></i> Orders</a>
                        <ul id="demo" class="dropdown-menu">
                            <li>
                                <a href="#">View Orders</a>
                            </li>
                            <li>
                                <a href="#">Follow Status</a>
                            </li>
                        </ul>
                    </li>
                    <li class="dropdown">
                        <a href="#" data-toggle="dropdown"><i class="dropdown-toggle glyphicon glyphicon-arrow-down"></i> Returns</a>
                        <ul id="demo" class="dropdown-menu">
                            <li>
                                <a href="#">View Returns</a>
                            </li>
                            <li>
                                <a href="#">Update Status</a>
                            </li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container" id="containerCustom">
        @RenderBody()
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/CustomJS")
    @RenderSection("scripts", required: false)
</body>
</html>