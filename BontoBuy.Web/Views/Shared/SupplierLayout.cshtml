<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width, intial scale=1.0"/>
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/SupplierCSS")
    @Styles.Render("~/Content/JAlert")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <nav class="navbar navbar-default navbar-static-top">
        <div class="container-fluid">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a href="@Url.Action("Index","Supplier")"><img id="Logo" class="navbar-brand" height="79" width="236" src="~/Content/Logo2.png" /></a>
                <a class="navbar-brand" href="@Url.Action("Index","Supplier")">
                    Supplier
                </a>
            </div>

            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <form class="navbar-form navbar-left" method="GET" role="search">
                    <div class="form-group">
                        <input type="text" name="q" class="form-control" placeholder="Search">
                    </div>
                    <button type="submit" class="btn btn-default"><i class="glyphicon glyphicon-search"></i></button>
                </form>
                <ul class="nav navbar-nav navbar-right">
                    @Html.Partial("SupplierLoginPartial")
                </ul>
            </div>
        </div>
    </nav>
    <div class="container">
        <div class="row">
            <div class="col-sm-2">
                <div id="sidebar" class="well sidebar-nav">
                    <h5>
                        <i class="glyphicon glyphicon-home"></i>
                        <small><b>MANAGEMENT</b></small>
                    </h5>
                    <ul class="nav nav-pills nav-stacked">
                        <li class="active"><a href="@Url.Action("Index","Supplier")">Home</a></li>
                        <li><a href="@Url.Action("CategorySelection","ProductCreation")">Add Product</a></li>
                        <li><a href="#">Search</a></li>
                    </ul>
                    <h5>
                        <i class="glyphicon glyphicon-info-sign"></i>
                        <small><b>Products</b></small>
                    </h5>
                    <ul class="nav nav-pills nav-stacked">
                        <li><a href="@Url.Action("SupplierRetrieveModels", "Supplier")">List</a></li>
                        <li><a href="#">Manage</a></li>
                    </ul>
                    <h5>
                        <i class="glyphicon glyphicon-info-sign"></i>
                        <small><b>Orders</b></small>
                    </h5>
                    <ul class="nav nav-pills nav-stacked">
                        <li><a href="@Url.Action("SupplierRetrieveOrders", "Supplier")">List</a></li>
                        <li><a href="#">Manage</a></li>
                    </ul>
                </div>
            </div>
            <div class="container container-fluid col-md-10">
                @RenderBody()
            </div>
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/CustomJS")
    @Scripts.Render("~/bundles/JAlert")
    @RenderSection("scripts", required: false)
</body>
</html>