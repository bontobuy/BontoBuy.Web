                                                <button class="btn btn-primary" type="button">Rs250</button> <button href="#" class="btn btn-default" type="button"><span class="glyphicon glyphicon-heart"></span> Add to Wishlist</button>
                                            </div><!-- End Item -->
                                        </div><!-- End Carousel Inner -->
                                        <!-- Controls -->
                                        <a class="left carousel-control" role="button" href="#newCollection" data-slide="prev">
