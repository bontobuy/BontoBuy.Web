@using BontoBuy.Web.Models

<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, intial-scale=1.0">
    <title>@ViewBag.Title </title>

    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/css/bootstrap")
    @Scripts.Render("~/bundles/modernizr")
    @Styles.Render("~/Content/JAlert")
    @Styles.Render("~/Content/FontAwesome")
    <style type="text/css">
    </style>

    <script type="text/javascript">
        $(document).ready(function () {
            function check() {
                var ItemContent = $('#cartLink').attr('data-content');
                alert(ItemContent);
            }
        })
    </script>
</head>
<body>
    @*<img alt="full screen background image" src="~/Content/Background.jpg" id="full-screen-background-image" />*@
    <div class="container">
        <nav class="navbar navbar-inverse navbar-fixed-top">
            <div class="navbar-header">
                <button class="navbar-toggle" type="button" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a href="@Url.Action("Index","Home")"><img id="Logo" class="navbar-brand" height="79" width="236" src="~/Content/Logo2.png" /></a>
            </div>

            <div class="collapse navbar-collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                </ul>

                <form class="navbar-form navbar-left" method="GET" role="search">
                    <div class="form-group">
                        <input type="text" name="q" class="form-control" placeholder="Search">
                    </div>
                    <button type="submit" class="btn btn-primary"><span class="glyphicon glyphicon-search" aria-hidden="true"></span></button>
                    <a class="text-info" href="@Url.Action("AdvancedSearch","Search")">Advanced</a>
                </form>

                <ul class="nav navbar-nav navbar-right">
                    @Html.Partial("_LoginPartial")
                    <li class="dropdown">
                        @{
                            var Cart = new List<CartViewModel>();
                            Cart = Session["Cart"] as List<CartViewModel>;
                            string numberOfItems;
                            if (Cart == null)
                            {
                                numberOfItems = "Empty";
                            }
                            else { numberOfItems = Cart.Count.ToString(); }
                        }
                        <a href="#" class="text-info" id="cartLink" role="link" onclick="return check()" data-content="@numberOfItems"> <span class="glyphicon glyphicon-shopping-cart"></span>Shopping Cart(<i class="badge warning cart">@numberOfItems</i>)<span class="caret"></span></a>
                        @*<ul class="dropdown-menu dropdown-cart" role="menu">
                                <li class="cartlist">
                                        <span class="item">
                                            <span class="item-left">
                                                <img src="50/50/" alt=""/>
                                                <span class="item-info">
                                                    <span>Item name</span>
                                                    <span>Rs25</span>
                                                </span>
                                            </span>
                                            <span class="item-right">
                                                <button class="btn btn-xs btn-danger pull-right">x</button>
                                            </span>
                                        </span>
                                    </li>
                                <li class="divider"></li>
                                <li id="viewCart" class="hide">@Html.ActionLink("View Cart", "NavigateTocart", "Cart")</li>
                                <li class="divider"></li>
                            </ul>*@
                    </li>
                </ul>
            </div><!-- /.nav-collapse -->
        </nav>
    </div>

    <div class="container body-content">
        @RenderBody()
    </div>
    <footer>
        <div class="footer">
            <div class="container footerContainer">
                <div class="container">
                    <div class="row">
                        <div class="col-lg-2  col-md-2 col-sm-4 col-xs-6">
                            <h3> Policy Info </h3>
                            <ul>
                                <li> <a href="#"> Privacy Policy </a> </li>
                                <li> <a href="#"> Terms of Sale </a> </li>
                                <li> <a href="#"> Terms of Use </a> </li>
                                <li> <a href="#"> Policy </a> </li>
                            </ul>
                        </div>
                        <div class="col-lg-2  col-md-2 col-sm-4 col-xs-6">
                            <h3> Company </h3>
                            <ul>
                                <li> <a href="#"> About Us </a> </li>
                                <li> <a href="#"> Core Values </a> </li>
                                <li> <a href="#"> Sitemape </a> </li>
                            </ul>
                        </div>
                        <div class="col-lg-2  col-md-2 col-sm-4 col-xs-6">
                            <h3> Business </h3>
                            <ul>
                                <li> <a href="#"> Deal of the Day </a> </li>
                                <li> <a href="@Url.Action("RegisterSupplier","Account")"> Sell on BontoBuy </a> </li>
                            </ul>
                        </div>
                        <div class="col-lg-2  col-md-2 col-sm-4 col-xs-6">
                            <h3> Need Help? </h3>
                            <ul>
                                <li> <a href="#"> FAQ </a> </li>
                                <li> <a href="#"> Contact Us </a> </li>
                            </ul>
                        </div>
                        <div class="col-lg-3  col-md-3 col-sm-6 col-xs-12 ">
                            <h3> Stay Connected </h3>
                            <ul class="social">
                                <li> <a href="#"> <i class=" fa fa-facebook">   </i> </a> </li>
                                <li> <a href="#"> <i class="fa fa-google">   </i> </a> </li>
                                <li> <a href="#"> <i class="fa fa-twitter">   </i> </a> </li>
                            </ul>
                        </div>
                    </div>
                    <div class="footer-bottom">
                        <div class="container">
                            <p class="pull-left"> Copyright © BontoBuy 2016. All right reserved. </p>
                            <div class="pull-right">
                                <ul class="nav nav-pills payments">
                                    <li><i class="fa fa-cc-visa"></i></li>
                                    <li><i class="fa fa-cc-mastercard"></i></li>
                                    <li><i class="fa fa-cc-amex"></i></li>
                                    <li><i class="fa fa-cc-paypal"></i></li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </footer>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/CustomJS")
    @Scripts.Render("~/bundles/JAlert")
    @RenderSection("scripts", required: false)
</body>
</html>