@model IEnumerable<BontoBuy.Web.Models.SupplierGetModelSpecViewModel>
@{
    Layout = "~/Views/Shared/SupplierLayout.cshtml";
    ViewBag.Title = "SupplierGetModelSpec";
}

@using (Html.BeginForm())
{
    <table class="table">
        @Html.ValidationSummary(true)
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Value)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>

                <td>
                    @Html.DisplayFor(modelItem => item.Value)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.HiddenFor(modelItem => item.SpecificationId)
                </td>
                <td>
                    @Html.HiddenFor(modelItem => item.ModelId)
                </td>
            </tr>
        }
    </table>

}