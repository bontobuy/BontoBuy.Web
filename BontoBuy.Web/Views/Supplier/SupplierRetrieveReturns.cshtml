@model IEnumerable<BontoBuy.Web.Models.ReturnViewModel>
@{
    Layout = "~/Views/Shared/SupplierLayout.cshtml";
}

<div class="col-md-12">
    <h2>@ViewBag.Title</h2>
    <p class="text-success">@ViewBag.StatusMessage</p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ReturnId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OrderId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ReturnDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DtCreated)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ReturnId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.OrderId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ReturnDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Status)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DtCreated)
                </td>

                <td>
                    @Html.ActionLink("Details", "SupplierGetReturn", new { id = item.ReturnId }) |
                    @if (item.ReturnMethod == null)
                    {
                        @Html.ActionLink("Edit", "SupplierEditReturn", new { id = item.ReturnId })
                    }
                </td>
            </tr>
        }
    </table>
</div>