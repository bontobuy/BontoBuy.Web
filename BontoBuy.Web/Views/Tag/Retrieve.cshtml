@model IEnumerable<BontoBuy.Web.Models.SpecialCategoryViewModel>

@{
    Layout = "~/Views/Shared/AdminLayout.cshtml";
    ViewBag.Title = "ListOfTag";
}

<h2>List of Tags</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.ActionLink("Edit", "Update", new { id = item.SpecialCatId }) |
                @Html.ActionLink("Details", "Get", new { id = item.SpecialCatId })
            </td>
        </tr>
    }
</table>