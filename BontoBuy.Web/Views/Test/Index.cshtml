@model List<BontoBuy.Web.Models.ModelSpecViewModel>
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

@using (Html.BeginForm("Index", "Test", FormMethod.Post))
{
    <table class="table">
        @for (int i = 0; i < Model.Count; i++)
        {
            <tr>
                <td>
                    @Html.TextBox("ModelSpecViewModel[" + (@i + 10) + "].Description",
                    Model[i].Description, new { @readonly = "readonly" })
                </td>
                <td>
                    @Html.TextBox("ModelSpecViewModel[" + (@i + 10) + "].Value",
                    Model[i].Value)
                </td>
            </tr>
        }

        <tr>
            <td colspan="4">
                <input type="submit" value="Submit"/>
            </td>
        </tr>
    </table>
}